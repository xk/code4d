  // ----------------------------------------------------  // User name (OS): Pascal Foubert  // ----------------------------------------------------  // Method: Util_Mac_File_Folder_Tar  //  // Description:  // Tar a Document or a Folder on Mac OS X  //  //  // Parameters  // $1 (Text) Destination tar file path  // $2 (Text) Tar file name   // $3 (Text) Source file path  // $4 (Text) Source file name  // $5 (BoolŽen) Asynchrone True/False  // ----------------------------------------------------C_TEXT($1;$TarDest;$2;$TarName;$3;$SourcePath;4;$SourceName)C_BOOLEAN($5;$Async)C_TEXT($Action;$In;$Out;$Error)If (Count parameters>=4)  // $TarDest:=$1$TarName:=$2$SourcePath:=$3$SourceName:=$4If (<>System_Path_Separator=":")  // On Mac OS X, should already be = to ":"$Action:="/usr/bin/tar -czf "$Action:=$Action+"/Volumes/"+Util_Mac_Path_to_Unix ($TarDest)+$TarName+" -C /Volumes/"+Util_Mac_Path_to_Unix ($SourcePath)+" "+$SourceName$Async:=$5If ($Async)SET ENVIRONMENT VARIABLE("_4D_OPTION_BLOCKING_EXTERNAL_PROCESS";"false")LAUNCH EXTERNAL PROCESS($Action;$In)SET ENVIRONMENT VARIABLE("_4D_OPTION_BLOCKING_EXTERNAL_PROCESS";"true")$0:=""Else SET ENVIRONMENT VARIABLE("_4D_OPTION_BLOCKING_EXTERNAL_PROCESS";"true")LAUNCH EXTERNAL PROCESS($Action;$In;$Out;$Error)$0:=$ErrorEnd if End if End if 