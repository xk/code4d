  // Method: Util_Mac_File_Folder_Copy  //  // Description:  // Copy a Document or a Folder on Mac OS X  //  // Parameters  // $1 (Text) full pathname of the original File/Folder  // $2 (Text) full pathname of the destination File/Folder  // $3 (BoolŽen) Asynchrone True/FalseC_TEXT($1;$2)C_BOOLEAN($3;$Async)C_TEXT($Action;$In;$Out;$Error)C_TEXT($Path1;$Path2)If (Count parameters>=2)  // Two path providedIf (<>System_Path_Separator=":")  // On Mac OS X, should already be = to ":"  // ------ proceed the copy of $1as $2 -----If (Test path name($1)=0)  // is a directory$Action:="/bin/cp -R "Else $Action:="/bin/cp "End if $Path1:="/Volumes/"+Util_Mac_Path_to_Unix ($1)$Path2:="/Volumes/"+Util_Mac_Path_to_Unix ($2)$Action:=$Action+$Path1+" "+$Path2$Async:=$3If ($Async)SET ENVIRONMENT VARIABLE("_4D_OPTION_BLOCKING_EXTERNAL_PROCESS";"false")LAUNCH EXTERNAL PROCESS($Action;$In)SET ENVIRONMENT VARIABLE("_4D_OPTION_BLOCKING_EXTERNAL_PROCESS";"true")$0:=""Else SET ENVIRONMENT VARIABLE("_4D_OPTION_BLOCKING_EXTERNAL_PROCESS";"true")LAUNCH EXTERNAL PROCESS($Action;$In;$Out;$Error)$0:=$ErrorEnd if End if End if 