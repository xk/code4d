  // Method: Util_Mac_File_Folder_Delete  //  // Description  // Delete a Document or a Folder on Mac OS X  //  // Parameters  // $1 (Text) full pathname of the File/Folder to deleteC_TEXT($1;$0)C_TEXT($Action;$In;$Out;$Error)C_TEXT($Path1)If (Count parameters>=1)  // One path providedIf (<>System_Path_Separator=":")  // On Mac OS X  // ------ proceed the copy of $1as $2 -----If (Test path name($1)=0)  // is a directory$Action:="/bin/rm -R "Else $Action:="/bin/rm "End if $Path1:="/Volumes/"+Util_Mac_Path_to_Unix ($1)$Action:=$Action+$Path1LAUNCH EXTERNAL PROCESS($Action;$In;$Out;$Error)$0:=$ErrorEnd if End if 