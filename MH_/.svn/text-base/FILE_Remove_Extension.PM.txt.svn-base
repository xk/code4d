  //@use:  // fileName := FILE_Remove_Extension (FileName:txt)If (False)  //=================  //@FUNCTION: FILE_Remove_Extension  //@brief:   //=================  //@params:  // $1 (_t): Filename  // $0 (_t) : Filename without extension (right to the period).  //@todo:  // To be rewritten with Regex  //=================  //@author: jpupier  //@modified_by:  //---------  //@version: 1.0  //@date: 4 oct, 2010  //=================  //@SVN_Folder: MH_/Else   //=================  //---------C_TEXT($0;$file_wo_Extension_t)$file_wo_Extension_t:=""C_TEXT($1;$FileName_t)  //---------C_LONGINT($ParamCount_l;$index_l)C_TEXT($char)$ParamCount_l:=Count parameters  //  //=================End if   //=================If ($ParamCount_l>=1)$FileName_t:=$1If (Length($FileName_t)>0)If (Position(".";$FileName_t)>0)  // whether the period can be... $index_l:=Length($FileName_t)Repeat $char:=$FileName_t[[$index_l]]If ($char#".")$index_l:=$index_l-1End if Until ($char=".")$file_wo_Extension_t:=Substring($FileName_t;1;$index_l-1)End if End if End if   //=================$0:=$file_wo_Extension_t  //eof