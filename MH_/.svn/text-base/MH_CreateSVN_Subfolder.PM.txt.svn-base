  //@use:  // MH_CreateSVN_Subfolder ($root:txt ;$svn_repo:txt) -> $ActualPath_tIf (False)  //=================  //@FUNCTION: MH_CreateSVN_Subfolder  //@brief:   // $ActualPath_t:=MH_CreateSVN_Subfolder("SVN Root" ; "Folder/Subfolder/SubSubFolder/")  // Creates the full hierarchy  //=================  //@author: jpupier  //@modified_by:  //---------  //@version: 1.0  //@date: 22 oct, 2010  //=================  //@SVN_Folder: MH_/Else   //=================C_TEXT($0;$ActualPath_t)$ActualPath_t:=""  // Will contain the actual path, according to platformC_TEXT($1;$host_svn_root_t)$host_svn_root_t:=$1  // Somewhere On The diskC_TEXT($2;$MethodSVNfolder_t)$MethodSVNfolder_t:=$2  //  Folder/SubFolder/SubSubFolder/C_TEXT($platformPath;$CurrentRoot_t;$subfolder_t)  //  //=================End if   //=================If ($MethodSVNfolder_t="")  // There is no subfolder specified$ActualPath_t:=$host_svn_root_tElse   // A subfolder is specified   // Add the trailing / if neededIf ($MethodSVNfolder_t[[Length($MethodSVNfolder_t)]]#"/")$MethodSVNfolder_t:=$MethodSVNfolder_t+"/"End if   // Remove the leading / if neededIf ($MethodSVNfolder_t[[1]]="/")$MethodSVNfolder_t:=Substring($MethodSVNfolder_t;2)End if   // Check directly if the hierarchy exists, using the platform separator$platformPath:=$host_svn_root_t+Replace string($MethodSVNfolder_t;"/";Folder separator)If (Test path name($platformPath)=Is a directory)$ActualPath_t:=$platformPathElse   // Full hierarchy does not exist, we have to create itIf (Test path name($host_svn_root_t)=Is a directory)  // Check if root exists$CurrentRoot_t:=$host_svn_root_tIf ($MethodSVNfolder_t#"")Repeat $subfolder_t:=Substring($MethodSVNfolder_t;1;Position("/";$MethodSVNfolder_t)-1)$MethodSVNfolder_t:=Substring($MethodSVNfolder_t;Position("/";$MethodSVNfolder_t)+1)If ($subfolder_t#"")$CurrentRoot_t:=$CurrentRoot_t+$subfolder_t+Folder separatorIf (Test path name($CurrentRoot_t)#Is a directory)CREATE FOLDER($CurrentRoot_t)End if End if Until ($MethodSVNfolder_t="")$ActualPath_t:=$CurrentRoot_tEnd if End if End if End if   //=================$0:=$ActualPath_t