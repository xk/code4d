  //@use:  // $variableType_l := TYPE_Get_Type ($Pointer)If (False)  //=================  //@FUNCTION: TYPE_Get_Type  //@brief: Returns the type of referenced variable   // Handles 2D array types (100 + Type of array 1D)  //=================  //@params:  // $1 (_p): pointer on variable   //@returns:  // $0 (_l) : Type of variable. (0 for unknown, >100 for 2D array)  //=================  //@author: jpupier  //@modified_by:  //---------  //@version: 1.0  //@date: 8 nov, 2010  //=================  //@SVN_Folder: TYPE_/Else   //=================C_POINTER($1;$variable_p)C_LONGINT($0;$variableType_l)$variableType_l:=0  //---------C_LONGINT($ParamCount_l)$ParamCount_l:=Count parameters  //  //=================End if   //=================If ($ParamCount_l>0)$variable_p:=$1If (Type($variable_p)=Is Pointer)$variableType_l:=Type($variable_p->)If ($variableType_l=Array 2D)$variableType_l:=100+Type($variable_p->{0})End if End if End if   //=================$0:=$variableType_l  //eof