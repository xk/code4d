lation : BE 03-2010)C_LONGINT(MATHERROR)C_POINTER($1)  ` pointeur tableau de valeurs réellesC_REAL($0)$0:=0  ` Traitement des erreursCase of : (Size of array($1->)=0)MATHERROR:=-1Else MATHERROR:=0End case   ` AlgorithmeIf (MATHERROR=0)C_REAL($x2;$x)C_LONGINT($i;$k)$k:=Size of array($1->)$x2:=0$x:=0For ($i;1;$k)$x2:=$x2+($1->{$i}^2)  ` Sommex2$x:=$x+$1->{$i}  ` SommexEnd for $0:=$k*$x2  ` nSommex2$0:=$0-($x^2)  ` nSommex2 - (Sommex)2$0:=$0/($k^2)  ` (nSommex2 - (Sommex)2) / n2$0:=Square root($0)  ` √( (nSommex2 - (Sommex)2) / n2 )End if End if 