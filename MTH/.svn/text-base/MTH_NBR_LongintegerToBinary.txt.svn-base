it $i$vt_Nombre_en_Binaire:=$vt_Nombre_en_Binaire+"1"Else $vt_Nombre_en_Binaire:=$vt_Nombre_en_Binaire+"0"End if End for $0:=$vt_Nombre_en_Binaire