  `Comment force-t-on la création des constantes?00:00:00?  `Comment gère-t-on les cosntantes dans V11 ?  `Exemples ???If (False)  ` MATH_Constantes [ ]  `Auteur : Teddy LINET  `Date : 05/2003  ` ------------------------------------------------------  ` ---------------   F R A N C A I S  ---------------  ` ------------------------------------------------------  ` Cette méthode crée les constantes des méthodes de MATH4D dans la structure, si celles-ci n'existe pas  ` ---------------------------------------------  ` Prend un parametre optionnel  ` -1 : suppression des constantes  ` 0 : mise à jour "automatique" (correspond à +1)  ` Ne crée pas 2 fois les constantes, une fois fait (sauf forcer)  ` ---------------------------------------------  ` MATHERROR : n'attend pas d'erreur  ` ---------------------------------------------  ` EXEMPLES :  ` MATH_Constantes : création des constantes  ` ------------------------------------------------------  ` ---------------   E N G L I S H   -----------------  ` ------------------------------------------------------  ` This method creates constants for Math4D methods in structure, if they do not exist.  ` ---------------------------------------------  ` Receive an optional parameter  ` -1 : removal of constants'  ` 0 : automatic updating (corresponding to +1)  ` This method does not create constants twice, unless forcing.  ` ---------------------------------------------  ` MATHERROR : No error managed  ` ---------------------------------------------  ` EXEMPLES :  ` MATH_Constantes : creation of constants  ` ------------------------------------------------------  `  (translation : BE 03-2010)End if C_LONGINT($1;$vCommande_L)ARRAY LONGINT($tNumerosRessource_L;0)ARRAY TEXT($tNomsRessource_T;0)ARRAY TEXT($tNomsConstantes_T;0)C_LONGINT($i_L;$vNumRessourceSTRD_L;$vNumRessource4DKD_L)C_BLOB($vBlobRessource_Q)C_TEXT($vAlerte_T)C_BOOLEAN($vPoursuivre_B)C_LONGINT($vVersionConstantes_L)If (Count parameters>0)$vCommande_L:=$1Else $vCommande_L:=0End if RESOURCE LIST("4DK#";$tNumerosRessource_L;$tNomsRessource_T)$i_L:=Find in array($tNomsRessource_T;"MATH_ConstantesMethodes")If ($i_L=-1)  ` Le fichier n'existe pas déjà$vPoursuivre_B:=TrueElse DELETE RESOURCE("4DK#";$tNumerosRessource_L{$i_L})Case of : ($vCommande_L=1)  ` Forcer => on efface avant de recommencer$vPoursuivre_B:=True: ($vCommande_L=-1)  ` Supprimer => on efface avant de recommencer$vPoursuivre_B:=False: ($vCommande_L=0)  ` Mise à jour "automatique" : pas de différence avec +1 à ce jour$vPoursuivre_B:=TrueElse $vPoursuivre_B:=FalseEnd case End if If ($vPoursuivre_B)  ` On crée d'abord un ficher "STR#"RESOURCE LIST("STR#";$tNumerosRessource_L;$tNomsRessource_T)$vNumRessourceSTRD_L:=15000While (Find in array($tNumerosRessource_L;$vNumRessourceSTRD_L)#-1)  `dans un endroit libre de préférence$vNumRessourceSTRD_L:=$vNumRessourceSTRD_L+1End while   ` On crée le tableau des constantes pour la méthode MATH_UnitésINSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_Constantes:1:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_Categorie:2:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_UniteReference:3:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_ValeurConversion:4:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_ValeurZero:5:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_Dimension:6:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_SystemeMetrique:7:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_Totale:8:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_NomComplet:9:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_NomUI:10:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_ConstantesForcées:11:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_ToutesUnites:Toutes:S"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_Symbole:13:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Unite_CategorieParUnite:14:L"  ` Pour la méthode MATH_IntervalleConfianceINSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Confiance_Proportions:1:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Confiance_Moyenne:2:L"  ` Pour la méthode MATH_LoiNormaleINSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Normale_p:p:S"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Normale_Z:Z:S"  ` Pour la méthode MATH_MatriceLigneINSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Matrice_Multiplier:1:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Matrice_Permuter:2:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Matrice_Ajouter:3:L"  ` Pour la méthode MATH_NewtonINSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Newton_F:1:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Newton_FP:2:L"  ` Pour la méthode MATH_SegmentINSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Segment_Corde:1:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Segment_Arc:2:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Segment_Fleche:3:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Segment_Surface:4:L"  ` Pour la méthode MATH_SurfaceGrapheINSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Graphe_Abscisses:1:L"INSERT IN ARRAY($tNomsConstantes_T;1)$tNomsConstantes_T{1}:="Graphe_Origine:2:L"ARRAY TO STRING LIST($tNomsConstantes_T;$vNumRessourceSTRD_L)  ` On crée ensuite un ficher "4DK#"RESOURCE LIST("4DK#";$tNumerosRessource_L;$tNomsRessource_T)$vNumRessource4DKD_L:=15001While (Find in array($tNumerosRessource_L;$vNumRessource4DKD_L)#-1)  `dans un endroit libre de préférence$vNumRessource4DKD_L:=$vNumRessource4DKD_L+1End while   ` On déplace les "STR#" fraichement créés vers les constantes "4DK#"GET RESOURCE("STR#";$vNumRessourceSTRD_L;$vBlobRessource_Q)DELETE RESOURCE("STR#";$vNumRessourceSTRD_L)  ` Plus utile => poubelle !SET RESOURCE("4DK#";$vNumRessource4DKD_L;$vBlobRessource_Q)SET RESOURCE NAME("4DK#";$vNumRessource4DKD_L;"MATH_ConstantesMethodes")$vAlerte_T:="Les constantes des unités sont inclues à la structure."+Char(Carriage return )$vAlerte_T:=$vAlerte_T+"Réouvrir la base pour pouvoir en profiter."ALERT($vAlerte_T)End if 