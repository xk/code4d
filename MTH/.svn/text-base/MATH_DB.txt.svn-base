 : BE 03-2010)End if C_LONGINT(MATHERROR)C_REAL($1;$2;$3;${4})C_REAL($0)C_REAL($n)C_LONGINT($i;$k)MATHERROR:=0$0:=0If (($1<=0) | ($3<=0))MATHERROR:=-1Else If (Count parameters=4)$k:=0Else $k:=$5End if $n:=0For ($i;1;($4-1))$n:=$n+(MATH_DB ($1;$2;$3;$i))End for $0:=($1-$k)*(1-(($2/$1)^(1/$3)))End if 