 and 1$Intermediate_Value_2_r:=2*$Random_Number_2_r-1$Random_Factor_r:=($Intermediate_Value_1_r^2)+($Intermediate_Value_2_r^2)  `The $Random_Factor_r must be >0 or Log($Random_Factor_r):=-INFUntil (($Random_Factor_r>0) & ($Random_Factor_r<1))$Random_Factor_r:=Square root((-2*Log($Random_Factor_r)/$Random_Factor_r))  `This yields the raw Gaussian random number as a real value 0.0<=$Gaussian_Random$Gaussian_Random_Number_r:=(Round(($Intermediate_Value_1_r*$Random_Factor_r);1)*100)+400  `Calculate the range betwen the minimum and maximum$Range_r:=Abs($Maximum_r-$Minimum_r)  `This converts the from the range of 0.0<=$Gaussian_Random_Number_r<= 800.0 to   `$Minimum_r<=$Gaussian_Random_Number_r<= $Maximum_r with up to 6 significant figu$Gaussian_Random_Number_r:=Round(((($Range_r/800)*$Gaussian_Random_Number_r)+$Minimum_r);6)$0:=$Gaussian_Random_Number_rEnd if End if 